@model PDHourTracker.Web.Models.AttendeeHours.AttendeeHourEditModel

@{ 
    ViewData["Title"] = "Add Attendee Hours";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <h3>@Model.Workshop.WorkshopName</h3>
        <p>@Model.Workshop.Project.ProjectName</p>
        <p>@Model.Workshop.TrainingDate.ToShortDateString()</p>
        <p>@Model.Workshop.SessionIdentifier-@Model.Workshop.ProviderCode.Code</p>
        <p>@Model.Workshop.Employee.FullName</p>
    </div>
</div>
<form asp-controller="AttendeeHours" asp-action="Add" method="post" role="form">

    <input type="hidden" asp-for="WorkshopId" />
    
    <div class="form-group">
        <label asp-for="AttendeeId">Attendee</label>
        @*<select class="form-control" asp-items="@{new SelectList(Model.Attendees, "Id", "FullName")}">*@
        <select class="form-control" asp-items='new SelectList(Model.Attendees, "Id", "FullName")'>
            <option value="">(Select Attendee)</option>
        </select>
        <span asp-validation-for="AttendeeId"></span>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label asp-for="PDHours">PD Hours</label>
            <input type="number" class="form-control" asp-for="PDHours" />
            <span asp-validation-for="PDHours"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Comments">Comments</label>
        <textarea class="form-control" asp-for="Comments" rows="3" cols="60"></textarea>
        <span asp-validation-for="Comments"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-sm btn-primary" value="Add Hours" />
    </div>
</form>
<div class="row">
    <div class="col-md-12">
        <p>
            <a asp-controller="Workshops" asp-action="Details" asp-route-id="@Model.WorkshopId">
                Cancel and go back to workshop
            </a>
        </p>
    </div>
</div>